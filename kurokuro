      margin-top: 20px;
    }

    .video {
      width: 180px;
      position: absolute;
      top: 50%;
      left: 0;
      transform: translateX(-100%) translateY(-50%);
      animation: moveAcross .9s linear forwards;
      border-radius: 12px;
    }

    @keyframes moveAcross {
      0% {
        transform: translateX(-100%) translateY(-50%);
      }
      100% {
        transform: translateX(1600px) translateY(-50%);
      }
    }

    button {
      padding: 12px 24px;
