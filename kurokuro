<body>

  <button onclick="launchMedia()">KURU-KURU</button>

  <div class="container" id="mediaContainer"></div>

  <script>
    function launchMedia() {
      const audioSources = [
        "kuroring.mp3",
        "kurokuro.mp3"
      ];

      const videoSource = "fullkuroring.mp4";
      const selectedAudioSrc = audioSources[Math.floor(Math.random() * audioSources.length)];
      const audio = document.createElement('audio');
      audio.src = selectedAudioSrc;
      audio.autoplay = true;
      audio.loop = false;
      audio.controls = false;
      audio.muted = false;
      document.body.appendChild(audio);
      const video = document.createElement('video');
      video.src = videoSource;
      video.className = 'video';
      video.autoplay = true;
      video.loop = true;
      video.controls = false;
      video.muted = true;
      video.playsInline = true;
      const container = document.getElementById('mediaContainer');
      container.appendChild(video);
      video.play();
      audio.play();
      setTimeout(() => {
        video.remove();
      }, 6000);
    }
  </script>
</body>
